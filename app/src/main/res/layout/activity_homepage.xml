<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:id="@+id/homepage_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- TOP LAYOUT -->
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/homepage_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                app:icon="@drawable/profile_user"
                app:iconSize="25dp"
                app:iconTint="#FFFFFF" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/parcel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TransitNest"
                android:fontFamily="sans-serif-black"
                android:textSize="30dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/homepage_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:text="Notify"
                android:textSize="16sp"
                app:icon="@drawable/bell"
                app:iconSize="25dp"
                android:textColor="@color/white"
                app:iconTint="#FFFFFF"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <!-- MIDDLE LAYOUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/homepage_button1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                app:iconTint="#FFFFFF"
                android:backgroundTint="@color/dark_blue"
                android:text="Send Parcel"
                android:textSize="16sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/homepage_button2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/dark_blue"
                android:text="Carry Parcel"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:iconTint="#FFFFFF"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/homepage_button3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                app:iconTint="#FFFFFF"
                android:backgroundTint="@color/dark_blue"
                android:text="Discover Sender"
                android:textSize="16sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/homepage_button4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/dark_blue"
                android:text="Discover Bringer"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:iconTint="#FFFFFF"
                app:cornerRadius="5dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <!-- BOTTOM LAYOUT -->
        <LinearLayout
            android:id="@+id/bottom_homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/dark_blue">

            <Button
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:text="Home"
                app:cornerRadius="5dp"
                app:icon="@drawable/home_icon"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/trips_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:text="My Trips"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/myparcel_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:text="My Parcel"
                app:cornerRadius="5dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


